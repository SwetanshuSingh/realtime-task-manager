generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String
  password String
  role     String
  tasks    Task[] @relation()
}

model Task {
  id          String   @id @default(uuid())
  title       String   @unique
  description String
  createdAt   DateTime @default(now())
  completed   Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
